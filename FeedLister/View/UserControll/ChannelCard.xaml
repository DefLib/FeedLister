<UserControl x:Class="FeedLister.ChannelCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FeedLister"
             mc:Ignorable="d" 
             >
    <Grid Background="#F8FFF4BF" Margin="10,5,10,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="title" Grid.Row="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Name="description" Grid.Row="1" Grid.ColumnSpan="1" TextWrapping="Wrap"/>
        <TextBlock Name="link" Grid.Row="2" Grid.ColumnSpan="1"/>
        <Image Name="image" Grid.Column="1" Grid.RowSpan="3"/>
    </Grid>
</UserControl>
